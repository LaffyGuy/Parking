<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomsheetdialog.BottomSheetParkingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="top|center">


        <TextView
            android:id="@+id/tvNumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер паркомісця:"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_number"/>

        <TextView
            android:id="@+id/tvNumberPlace"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="24sp"
            android:text="1"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvEmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пошта:"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_email"/>

        <TextView
            android:id="@+id/tvEmailUser"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:text="taras@gmail.com"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvBookingDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата бронювання до: 10.05.2023"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_calendar"/>

        <TextView
            android:id="@+id/tvBookingDatePlace"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:text="10.12.2023"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:layout_marginTop="10dp"/>


    </LinearLayout>



</androidx.cardview.widget.CardView>